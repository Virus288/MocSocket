{
  "name": "moc-socket",
  "version": "0.1.2",
  "description": "Websocket mocking utility",
  "productName": "MocSocket",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib",
    "/types"
  ],
  "author": "https://github.com/Virus288",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "prebuild": "npm run lint",
    "lint": "eslint . --ext .ts --fix",
    "listErrors": "node_modules/.bin/tsc --skipLibCheck",
    "lintStaged": "npx lint-staged",
    "test": "jest --config tests/jest.config.ts",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Virus288/MocSocket"
  },
  "keywords": [
    "websocket",
    "ws",
    "mock",
    "websocket mock",
    "test",
    "testing",
    "mocSocket"
  ],
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.5.2",
    "@types/node": "20.9.2",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "6.20.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ]
  }
}
